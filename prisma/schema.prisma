// 1. Configuration de la connexion
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ==========================================
// 2. Modèles pour l'Authentification (NextAuth)
// ==========================================

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?   // Avatar Discord/Google
  customName    String?   // Prénom personnalisé défini par l'admin

  accounts      Account[]
  sessions      Session[]

  // Nos relations personnalisées pour le Five
  availabilities Availability[]
  templates      AvailabilityTemplate[]

  matchesTeam1 Match[] @relation("Team1")
  matchesTeam2 Match[] @relation("Team2")
  
  calls        Call[]
  callResponses CallResponse[]
}

model Match {
  id        String   @id @default(cuid())
  date      DateTime
  location  String?
  scoreTeam1 Int     @default(0)
  scoreTeam2 Int     @default(0)

  // Noms des joueurs personnalisés (JSON)
  team1Names String?
  team2Names String?

  team1     User[]   @relation("Team1")
  team2     User[]   @relation("Team2")

  createdAt DateTime @default(now())
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// 3. Modèles pour le Planifive
// ==========================================

// Les disponibilités réelles (Liées à une date spécifique)
model Availability {
  id        String   @id @default(cuid())
  userId    String

  // On stocke la date sous format DateTime
  date      DateTime

  // On stocke l'heure (8 à 23)
  hour      Int

  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Index pour rendre les recherches ultra rapides
  @@index([date, hour])
  @@unique([userId, date, hour])
}

// La "Semaine Type" (Pour la duplication intelligente)
model AvailabilityTemplate {
  id        String   @id @default(cuid())
  userId    String

  // 0 = Dimanche, 1 = Lundi, ..., 6 = Samedi
  dayOfWeek Int

  hour      Int

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Un user ne peut pas avoir deux templates pour le même créneau
  @@unique([userId, dayOfWeek, hour])
}

// ==========================================
// 4. Modèles pour l'intégration Discord / Call
// ==========================================

model Call {
  id        String   @id @default(cuid())
  creatorId String
  date      DateTime
  hour      Int
  location  String
  duration  Int      @default(60) // 60 or 90 minutes
  createdAt DateTime @default(now())

  creator   User     @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  responses CallResponse[]
}

model CallResponse {
  id        String   @id @default(cuid())
  callId    String
  userId    String
  status    String   // "ACCEPTED" or "DECLINED"
  createdAt DateTime @default(now())

  call      Call     @relation(fields: [callId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([callId, userId])
}

model SlotStatus {
  id           String   @id @default(cuid())
  date         DateTime
  hour         Int
  isFullNotified Boolean @default(false)
  isGoldenNotified Boolean @default(false)

  @@unique([date, hour])
}